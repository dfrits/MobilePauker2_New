<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/give_lesson_name_dialog_title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/eTGiveLessonName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_background"
        android:fontFamily="serif"
        android:importantForAutofill="no"
        android:inputType="textCapSentences"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/tFileExistingHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/file_already_exists"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:onClick="cancelClicked"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/bOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:onClick="okClicked"
            android:text="@string/ok" />
    </RelativeLayout>
</LinearLayout>
