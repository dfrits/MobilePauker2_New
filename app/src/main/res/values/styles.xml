<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionModeBackground">@color/action_menu_bg</item>
    </style>

    <style name="OpenLessonTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ResultDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/box_background</item>
    </style>

    <style name="NamingDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/defaultBackground</item>
        <item name="android:textColor">@color/color_selector_buttons_dialog</item>
    </style>
</resources>
